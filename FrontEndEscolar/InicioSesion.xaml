<Window x:Class="FrontEndEscolar.InicioSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontEndEscolar"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Inicio de Sesión" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        >
    <Grid Background="#FFE0DFDF">
        <Rectangle HorizontalAlignment="Left" Height="434" Margin="232,0,0,0" VerticalAlignment="Center" Width="350" Fill="White"/>

        <Label Content="Usuario" HorizontalAlignment="Left" Margin="290,145,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="290,228,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <TextBox x:Name ="tbUsuario" HorizontalAlignment="Center" Margin="0,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Height="23"/>
        <PasswordBox x:Name="pbContrasena" HorizontalAlignment="Center" Margin="0,257,0,0" VerticalAlignment="Top" Width="220" KeyDown="pbContrasena_KeyDown" Height="23"/>
        <Button x:Name="btnIniciarSesion" Content="Iniciar Sesión" HorizontalAlignment="Center" Margin="0,347,0,0" VerticalAlignment="Top" Click="btnIniciarSesion_Click" Height="31" Width="114" FontSize="15"/>
        <Label Content="Sistema de Gestión de Tutoría" HorizontalAlignment="Left" Margin="310,94,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
