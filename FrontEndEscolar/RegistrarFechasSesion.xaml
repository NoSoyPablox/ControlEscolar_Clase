<Window x:Class="FrontEndEscolar.RegistrarFechasSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontEndEscolar"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
        Title="Registrar fechas de sesion de tutoria" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnVolver" Content="Volver" HorizontalAlignment="Left" Margin="539,353,0,0" VerticalAlignment="Top" Height="40" Width="89" Click="btnVolver_Click"/>
        <Label Content="Primera sesión" HorizontalAlignment="Left" Margin="112,202,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <Label Content="Segunda sesión" HorizontalAlignment="Left" Margin="340,202,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label Content="Tercera sesión" HorizontalAlignment="Left" Margin="601,202,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <DatePicker x:Name="dpPrimeraSesion" HorizontalAlignment="Left" Margin="83,252,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dpSegundaSesion" HorizontalAlignment="Left" Margin="324,252,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dpTerceraSesion" HorizontalAlignment="Left" Margin="580,252,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="653,353,0,0" VerticalAlignment="Top" Height="40" Width="84" Click="btnGuardar_Click"/>
        <Label Content="Periodo Escolar" HorizontalAlignment="Left" Margin="45,40,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <ComboBox x:Name="cbPeriodoEscolar" HorizontalAlignment="Left" Margin="171,45,0,0" VerticalAlignment="Top" Width="142" SelectionChanged="cbPeriodoEscolar_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding nombre}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Label Content="Inicio de periodo:" HorizontalAlignment="Left" Margin="372,42,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <Label Content="Fin de periodo:" HorizontalAlignment="Left" Margin="581,41,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="lbFechaInicioPeriodo" Content="" HorizontalAlignment="Left" Margin="503,45,0,0" VerticalAlignment="Top" Width="73"/>
        <Label x:Name="lbFechaFinPeriodo" Content="" HorizontalAlignment="Left" Margin="695,43,0,0" VerticalAlignment="Top" Width="64"/>
        <Label Content="Seleccione las fechas para las sesiones de tutoria del periodo escolar seleccionado" HorizontalAlignment="Left" Margin="138,156,0,0" VerticalAlignment="Top" FontSize="14"/>
    </Grid>
</Window>
